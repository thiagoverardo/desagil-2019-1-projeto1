<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageActivity">

    <TextView
        android:id="@+id/text_morse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Morse:"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/alpha_label"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="137dp"
        android:text="Mensagem:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="83dp"
        android:padding="10sp"
        android:hint="Preview"
        android:text="" />

    <TextView
        android:id="@+id/morse_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="18dp"
        android:hint="Code"
        android:padding="10sp" />

    <Button
        android:id="@+id/morse_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:text="Morse" />

    <Button
        android:id="@+id/enter_button"
        android:layout_width="298dp"
        android:layout_height="100dp"
        android:layout_above="@+id/morse_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="6dp"
        android:text="Enter" />

    <Button
        android:id="@+id/backspace_button"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_above="@+id/morse_button"
        android:layout_alignStart="@+id/enter_button"
        android:layout_marginStart="296dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="6dp"
        android:text="Backspace" />

    <Button
        android:id="@+id/message1"
        android:layout_width="110dp"
        android:layout_height="72dp"
        android:layout_above="@+id/enter_button"
        android:layout_marginBottom="1dp"
        android:text="Fome" />

    <Button
        android:id="@+id/message2"
        android:layout_width="110dp"
        android:layout_height="72dp"
        android:layout_above="@+id/enter_button"
        android:layout_toEndOf="@+id/message1"
        android:text="Sede" />

    <Button
        android:id="@+id/message3"
        android:layout_width="110dp"
        android:layout_height="72dp"
        android:layout_above="@+id/enter_button"
        android:layout_toEndOf="@+id/message2"
        android:text="Banheiro" />

    <Button
        android:id="@+id/message4"
        android:layout_width="110dp"
        android:layout_height="72dp"
        android:layout_above="@+id/enter_button"
        android:layout_toEndOf="@+id/message3"
        android:text="Sono" />

    <Button
        android:id="@+id/alpha_morse"
        android:layout_width="215dp"
        android:layout_height="75dp"
        android:text="AlphaNum - Morse" />

    <Button
        android:id="@+id/morse_alpha"
        android:layout_width="215dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/alpha_morse"
        android:layout_marginStart="211dp"
        android:text="Morse - AlphaNum" />

</RelativeLayout>