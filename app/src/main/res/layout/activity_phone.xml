<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="8"
    android:columnCount="4"
    tools:context=".PhoneActivity">

    <TextView
        android:id="@+id/text_x"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_rowWeight="1"
        android:textColor="@android:color/black"
        android:text="Mensagem a ser enviada:" />

    <TextView
        android:id="@+id/text_message"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_rowWeight="1"
        android:hint="Preview" />

    <TextView
        android:id="@+id/text_number"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_rowWeight="1"
        android:textColor="@android:color/black"
        android:text="Número:" />

    <TextView
        android:id="@+id/edit_number"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_rowWeight="1"
        android:hint="Número para enviar a mensagem" />

    <TextView
        android:id="@+id/text_morse"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_rowWeight="1"
        android:textColor="@android:color/black"
        android:text="Morse Number:" />

    <TextView
        android:id="@+id/morse_field"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_rowWeight="1"
        android:hint="Insert the new number here" />

    <Button
        android:id="@+id/back_button"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1.5"
        android:text="back"/>

    <Button
        android:id="@+id/number_brother"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="1"
        android:layout_rowWeight="1.5"
        android:text="Irmão" />

    <Button
        android:id="@+id/number_cuidador"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="1"
        android:layout_rowWeight="1.5"
        android:text="Cuidador" />

    <Button
        android:id="@+id/send_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="1"
        android:layout_rowWeight="1.5"
        android:textStyle="bold"
        android:text="⏎"
        android:textSize="40dp" />

    <Button
        android:id="@+id/backspace_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="1"
        android:layout_rowWeight="1.5"
        android:textSize="30dp"
        android:text="⌫" />

    <Button
        android:id="@+id/morse_button"
        android:minHeight="150dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_rowWeight="4"
        android:text="Morse" />

</GridLayout>